<section class="page-signup-card">
  <div class="container-md m-auto">
    <div class="signup-wrapper">
      <!-- step 1 -->
      <div class="block-steps">
        <div class="card-title">OTP Validation</div>
        <div class="card-number"><span>3</span>/3</div>
      </div>
      <!-- add/remove class "in" to show/hide block -->
      <div class="signup-form mini-card">
        <div class="page-title">
          <h1 class="title">You are just one step away to open account with Globe Capital</h1>
          <div class="sub-title">We have sent a 6 digit OTP to your mobile number
